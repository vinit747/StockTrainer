<!DOCTYPE html>
<html lang="en">
<head>
  <title>StockWatch</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="CSS/watchlist.css">
</head>
<body>
<nav class="navbar nav navbar-inverse navbar-fixed-top text" id="result">
  <div class="container-fluid">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>                        
        </button>
      <a class="navbar-brand" href="#">StockWatch</a>
      <form class="navbar-form navbar-left mobsearch" method="POST" action="stocklogged">
          <div class="input-group">
            <input type="text" class="form-control formers" name="ticker" id="tickers" placeholder="Search a Stock eg. GOOG">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav boldem">
          <li><a href="history">History</a></li>
          <li><a href="currencylogged" class="converter"><span class="glyphicon glyphicon-usd"> </span>Converter</a></li>
          <li class="active"><a href="#">Watchlist</a></li>
        </ul>
        <form id="tck" action="stocklogged" method="POST">
              <input type="hidden" name="ticker" id="hold">
        </form>
        <form class="navbar-form navbar-left desksearch" method="POST" action="stocklogged">
          <div class="input-group">
            <input type="text" class="form-control formers" id="tickers2" name="ticker" placeholder="Search a Stock eg. GOOG">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
        <ul class="nav navbar-nav boldem navbar-right">
            <li><a href = "ranking">Ranking</a></li>        
            <li><a href = "loggedin"><span class="glyphicon glyphicon-user"> </span><span id="acc"><%= acc %></span></a></li>
            <li><a href = "logout" class="logout"><span class="glyphicon glyphicon-log-out"></span>Logout</a></li>
        </ul>
    </div>
  </div>
</nav>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 up">
            <table class="text table-condensed hold" border=1>
                <tr>
                    <td colspan=5>Going Up</td>
                </tr>
                <tr>
                    <td class="data">Ticker</td>
                    <td class="data">Open</td>
                    <td class="data">Close</td>
                    <td class="data">High</td>
                    <td class="data">Low</td>
                </tr>
            </table>
            <div class="overflow">
                <table class="text table-condensed otable" border=1>
                    <%var stock=up["stocks"];
                     for(var i=0; i < stock.length; i++) { %>
                        <tr>
                         <td class="tick"><%= stock[i].ticker %></td>
                         <% if(stock[i].open.ud == true){ %>
                            <td class="green"><%= stock[i].open.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].open.data %></td><% } %>
                         <% if(stock[i].close.ud == true){ %>
                            <td class="green"><%= stock[i].close.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].close.data %></td><% } %>
                         <% if(stock[i].high.ud == true){%>
                            <td class="green"><%= stock[i].high.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].high.data %></td><% } %>
                         <% if(stock[i].low.ud == true){%>
                            <td class="green"><%= stock[i].low.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].low.data %></td><% } %>   
                       </tr>
                    <% } %>
                </table>
            </div>
        </div>
        <div class="col-sm-6 down">
            <table class="text table-condensed hold" border=1>
                <tr>
                    <td colspan=5>Going down</td>
                </tr>
                <tr>
                    <td class="data">Ticker</td>
                    <td class="data">Open</td>
                    <td class="data">Close</td>
                    <td class="data">High</td>
                    <td class="data">Low</td>
                </tr>
            </table>
            <div class="overflow">
                <table class="text table-condensed otable" border=1>
                    <%var stock=down["stocks"];
                     for(var i=0; i < stock.length; i++) { %>
                        <tr>
                         <td class="tick"><%= stock[i].ticker %></td>
                         <% if(stock[i].open.ud == true){ %>
                            <td class="green"><%= stock[i].open.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].open.data %></td><% } %>
                         <% if(stock[i].close.ud == true){ %>
                            <td class="green"><%= stock[i].close.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].close.data %></td><% } %>
                         <% if(stock[i].high.ud == true){%>
                            <td class="green"><%= stock[i].high.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].high.data %></td><% } %>
                         <% if(stock[i].low.ud == true){%>
                            <td class="green"><%= stock[i].low.data %></td><% }else{ %>
                            <td class="red"><%= stock[i].low.data %></td><% } %>   
                       </tr>
                    <% } %>
                </table>
            </div>
        </div>
    </div>
</div>
  <script src="../JS/watchlist.js"></script>
  <script src="../JS/navbar.js"></script>
</body>
</html>


